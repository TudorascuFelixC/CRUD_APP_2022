<!--Form handling-->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <!--Name Side-->
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Felix Tudorascu">
        </div>
        <!--Name Side ENDS HERE-->

        <!--Email Side-->
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <!--Email side END HERE-->

        <!--Gender Side-->
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male"> 
                <label for="radio-2" class="radio-label" style="color:#ffffff">Male</label>
            </div>

            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female">
                <label for="radio-3" class="radio-label" style="color:#ffffff">Female</label>
            </div>       
        </div>

        <div class="form-group">
            <label for="gender" class="text-light" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active">
                <label for="radio-4" class="radio-label" class="butoane-radio" style="color:#ffffff">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive">
                <label for="radio-5" class="radio-label" style="color:#ffffff">Inactive</label>
            </div>
            </div>     
        

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    
    </div>
</form>